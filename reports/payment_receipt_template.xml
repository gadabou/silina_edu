<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Format papier pour imprimante thermique 58mm -->
        <record id="paperformat_thermal_58mm" model="report.paperformat">
            <field name="name">Thermique 58mm</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="page_height">0</field>
            <field name="page_width">58</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Rapport de Reçu de Paiement Thermique 58mm -->
        <record id="action_report_payment_receipt" model="ir.actions.report">
            <field name="name">Reçu Thermique 58mm</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">silina_edu.report_payment_receipt_document</field>
            <field name="report_file">silina_edu.report_payment_receipt_document</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_thermal_58mm"/>
        </record>

        <template id="report_payment_receipt_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="payment">
                    <div class="article" style="page-break-after: always;">
                        <style>
                            /* Design optimisé pour imprimante thermique 58mm */
                            @page {
                                size: 58mm auto;
                                margin: 0;
                                padding: 0;
                            }

                            body {
                                margin: 0;
                                padding: 0;
                                font-family: 'Courier New', monospace;
                                font-size: 9pt;
                                line-height: 1.3;
                                color: #000;
                                background: white;
                            }

                            .thermal-receipt {
                                width: 58mm;
                                margin: 0 auto;
                                padding: 3mm 2mm;
                                background: white;
                            }

                            /* En-tête */
                            .header {
                                text-align: center;
                                margin-bottom: 3mm;
                                border-bottom: 1px dashed #000;
                                padding-bottom: 3mm;
                            }

                            .company-logo {
                                max-width: 40mm;
                                max-height: 20mm;
                                margin: 0 auto 2mm auto;
                                display: block;
                            }

                            .company-name {
                                font-size: 11pt;
                                font-weight: bold;
                                margin-bottom: 1mm;
                                text-transform: uppercase;
                            }

                            .company-info {
                                font-size: 7pt;
                                margin-bottom: 2mm;
                                line-height: 1.2;
                            }

                            .receipt-title {
                                font-size: 13pt;
                                font-weight: bold;
                                margin: 2mm 0;
                                letter-spacing: 1px;
                            }

                            .receipt-number {
                                font-size: 8pt;
                                margin-top: 1mm;
                            }

                            .datetime {
                                font-size: 8pt;
                                margin-top: 1mm;
                            }

                            /* Sections */
                            .section {
                                margin: 3mm 0;
                                padding-bottom: 2mm;
                                border-bottom: 1px dashed #000;
                            }

                            .section-title {
                                font-size: 9pt;
                                font-weight: bold;
                                margin-bottom: 2mm;
                                text-align: center;
                                text-decoration: underline;
                            }

                            .info-line {
                                display: table;
                                width: 100%;
                                margin-bottom: 1mm;
                                font-size: 8pt;
                            }

                            .info-label {
                                display: table-cell;
                                width: 45%;
                                font-weight: normal;
                            }

                            .info-value {
                                display: table-cell;
                                width: 55%;
                                text-align: right;
                                font-weight: bold;
                            }

                            /* Montant principal */
                            .amount-box {
                                text-align: center;
                                margin: 3mm 0;
                                padding: 3mm 0;
                                border: 2px solid #000;
                                background: #f0f0f0;
                                -webkit-print-color-adjust: exact;
                                print-color-adjust: exact;
                            }

                            .amount-label {
                                font-size: 8pt;
                                margin-bottom: 1mm;
                            }

                            .amount-value {
                                font-size: 16pt;
                                font-weight: bold;
                                letter-spacing: 1px;
                            }

                            /* Tableau simple */
                            .simple-table {
                                width: 100%;
                                font-size: 8pt;
                                margin: 2mm 0;
                            }

                            .table-header {
                                font-weight: bold;
                                border-bottom: 1px solid #000;
                                padding-bottom: 1mm;
                                margin-bottom: 1mm;
                            }

                            .table-row {
                                display: table;
                                width: 100%;
                                margin-bottom: 1mm;
                            }

                            .table-cell-desc {
                                display: table-cell;
                                width: 60%;
                            }

                            .table-cell-amount {
                                display: table-cell;
                                width: 40%;
                                text-align: right;
                            }

                            .table-total {
                                border-top: 1px solid #000;
                                padding-top: 1mm;
                                margin-top: 1mm;
                                font-weight: bold;
                            }

                            /* Statut */
                            .status-paid {
                                text-align: center;
                                font-size: 10pt;
                                font-weight: bold;
                                margin: 3mm 0;
                                padding: 2mm;
                                border: 2px double #000;
                            }

                            /* Signatures */
                            .signatures {
                                margin-top: 5mm;
                                font-size: 7pt;
                                text-align: center;
                            }

                            .signature-line {
                                margin-top: 3mm;
                                border-top: 1px solid #000;
                                width: 70%;
                                margin-left: auto;
                                margin-right: auto;
                            }

                            /* Footer */
                            .footer {
                                text-align: center;
                                font-size: 7pt;
                                margin-top: 4mm;
                                padding-top: 2mm;
                                border-top: 1px dashed #000;
                            }

                            /* Séparateurs */
                            .separator {
                                text-align: center;
                                margin: 2mm 0;
                                font-size: 8pt;
                            }

                            .text-center {
                                text-align: center;
                            }

                            .text-bold {
                                font-weight: bold;
                            }

                            /* Optimisation impression */
                            @media print {
                                body {
                                    width: 58mm;
                                }
                                .thermal-receipt {
                                    padding: 1mm;
                                }
                            }
                        </style>

                        <div class="thermal-receipt">
                            <!-- Variables -->
                            <t t-set="student" t-value="env['silina.student'].search([('partner_id', '=', payment.partner_id.id)], limit=1)"/>
                            <t t-set="invoice" t-value="payment.reconciled_invoice_ids[0] if payment.reconciled_invoice_ids else False"/>
                            <t t-set="company" t-value="env.company"/>

                            <!-- En-tête -->
                            <div class="header">
                                <!-- Logo de l'entreprise -->
                                <t t-if="company.logo">
                                    <img class="company-logo" t-attf-src="data:image/png;base64,{{company.logo}}" alt="Logo"/>
                                </t>

                                <div class="company-name" t-esc="company.name or 'ÉCOLE'"/>

                                <!-- Informations de l'entreprise -->
                                <div class="company-info">
                                    <div t-if="company.street" t-esc="company.street"/>
                                    <div t-if="company.city">
                                        <span t-if="company.zip" t-esc="company.zip"/><span t-if="company.zip"> </span><span t-esc="company.city"/>
                                    </div>
                                    <div t-if="company.phone">Tél: <span t-esc="company.phone"/></div>
                                    <div t-if="company.email">Email: <span t-esc="company.email"/></div>
                                </div>

                                <div class="receipt-title">REÇU DE PAIEMENT</div>
                                <div class="receipt-number">N° <span t-field="payment.name"/></div>
                                <div class="datetime" t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M')"/>
                            </div>

                            <!-- Informations élève -->
                            <div class="section" t-if="student">
                                <div class="section-title">ÉLÈVE</div>
                                <div class="info-line">
                                    <div class="info-label">Nom:</div>
                                    <div class="info-value" t-esc="student.name"/>
                                </div>
                                <div class="info-line">
                                    <div class="info-label">Matricule:</div>
                                    <div class="info-value" t-esc="student.registration_number"/>
                                </div>
                                <div class="info-line">
                                    <div class="info-label">Classe:</div>
                                    <div class="info-value" t-esc="student.classroom_id.name if student.classroom_id else 'N/A'"/>
                                </div>
                                <div class="info-line">
                                    <div class="info-label">Année:</div>
                                    <div class="info-value" t-esc="student.academic_year_id.name if student.academic_year_id else 'N/A'"/>
                                </div>
                            </div>

                            <!-- Détails du paiement -->
                            <div class="section">
                                <div class="section-title">PAIEMENT</div>
                                <div class="info-line">
                                    <div class="info-label">Date:</div>
                                    <div class="info-value" t-field="payment.date"/>
                                </div>
                                <div class="info-line">
                                    <div class="info-label">Mode:</div>
                                    <div class="info-value" t-field="payment.journal_id.name"/>
                                </div>
                                <div class="info-line" t-if="payment.move_id and payment.move_id.ref">
                                    <div class="info-label">Réf:</div>
                                    <div class="info-value" t-field="payment.move_id.ref"/>
                                </div>
                            </div>

                            <!-- Montant payé -->
                            <div class="amount-box">
                                <div class="amount-label">MONTANT PAYÉ</div>
                                <div class="amount-value">
                                    <span t-field="payment.amount" t-options='{"widget": "monetary", "display_currency": payment.currency_id}'/>
                                </div>
                            </div>

                            <!-- Détails facture -->
                            <div class="section" t-if="invoice">
                                <div class="section-title">FACTURE N° <span t-esc="invoice.name"/></div>

                                <!-- Informations facture -->
                                <div class="info-line" style="font-size: 7pt;">
                                    <div class="info-label">Date facture:</div>
                                    <div class="info-value" t-field="invoice.invoice_date"/>
                                </div>
                                <div class="info-line" style="font-size: 7pt;">
                                    <div class="info-label">Échéance:</div>
                                    <div class="info-value" t-field="invoice.invoice_date_due"/>
                                </div>

                                <div class="separator">- - - - - - - - - - - - - -</div>

                                <!-- Lignes de facture ou tranche payée -->
                                <div class="simple-table">
                                    <div class="table-header">
                                        <div class="table-row">
                                            <div class="table-cell-desc">Description</div>
                                            <div class="table-cell-amount">Montant</div>
                                        </div>
                                    </div>

                                    <!-- Si paiement partiel, afficher la tranche correspondante -->
                                    <t t-set="is_partial_payment" t-value="payment.amount &lt; invoice.amount_total"/>
                                    <t t-set="matching_line" t-value="False"/>

                                    <t t-if="is_partial_payment">
                                        <!-- Trouver la ligne correspondant au montant payé -->
                                        <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                            <t t-if="abs(line.price_subtotal - payment.amount) &lt; 0.01 and not matching_line">
                                                <t t-set="matching_line" t-value="line"/>
                                            </t>
                                        </t>

                                        <!-- Afficher la tranche payée -->
                                        <t t-if="matching_line">
                                            <div class="table-row" style="background-color: #f0f0f0; font-weight: bold;">
                                                <div class="table-cell-desc">
                                                    <span t-field="matching_line.name"/>
                                                    <br/><span style="font-size: 6pt; font-weight: normal;">(Tranche payée)</span>
                                                </div>
                                                <div class="table-cell-amount">
                                                    <span t-field="matching_line.price_subtotal" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                </div>
                                            </div>
                                        </t>

                                        <!-- Si pas de correspondance exacte, afficher le montant payé -->
                                        <t t-if="not matching_line">
                                            <div class="table-row" style="background-color: #f0f0f0; font-weight: bold;">
                                                <div class="table-cell-desc">Paiement partiel</div>
                                                <div class="table-cell-amount">
                                                    <span t-field="payment.amount" t-options='{"widget": "monetary", "display_currency": payment.currency_id}'/>
                                                </div>
                                            </div>
                                        </t>

                                        <!-- Afficher les autres tranches en grisé -->
                                        <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                            <t t-if="line != matching_line">
                                                <div class="table-row" style="color: #999; font-size: 7pt;">
                                                    <div class="table-cell-desc" t-field="line.name"/>
                                                    <div class="table-cell-amount">
                                                        <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                    </div>
                                                </div>
                                            </t>
                                        </t>
                                    </t>

                                    <!-- Si paiement complet, afficher toutes les lignes -->
                                    <t t-if="not is_partial_payment">
                                        <t t-foreach="invoice.invoice_line_ids" t-as="line">
                                            <div class="table-row">
                                                <div class="table-cell-desc" t-field="line.name"/>
                                                <div class="table-cell-amount">
                                                    <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                                </div>
                                            </div>
                                        </t>
                                    </t>
                                </div>

                                <div class="separator">- - - - - - - - - - - - - -</div>

                                <!-- Totaux -->
                                <div class="info-line">
                                    <div class="info-label">Total facture:</div>
                                    <div class="info-value">
                                        <span t-field="invoice.amount_total" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </div>
                                </div>
                                <div class="info-line">
                                    <div class="info-label">Déjà payé:</div>
                                    <div class="info-value">
                                        <span t-esc="invoice.amount_total - invoice.amount_residual" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </div>
                                </div>
                                <div class="info-line" style="font-size: 9pt; font-weight: bold;">
                                    <div class="info-label">RESTE À PAYER:</div>
                                    <div class="info-value">
                                        <span t-esc="invoice.amount_residual - payment.amount" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </div>
                                </div>

                                <!-- Statut soldé -->
                                <div class="status-paid" t-if="invoice.amount_residual - payment.amount &lt;= 0.01">
                                    ✓ SOLDÉ
                                </div>
                            </div>

                            <!-- Signatures -->
                            <div class="signatures">
                                <div>
                                    <div>Signature du caissier</div>
                                    <div class="signature-line"></div>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="footer">
                                <div>Ce reçu fait foi de paiement</div>
                                <div>Merci de le conserver</div>
                                <div style="margin-top: 2mm;">= = = = = = = = = = = = =</div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>
