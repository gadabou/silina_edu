<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_fee_receipt" model="ir.actions.report">
            <field name="name">Reçu de Paiement</field>
            <field name="model">silina.fee.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">silina_edu.report_fee_receipt_document</field>
            <field name="report_file">silina_edu.report_fee_receipt_document</field>
            <field name="binding_model_id" ref="model_silina_fee_payment"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_fee_receipt_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="payment">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center mb-4">
                                <h2>REÇU DE PAIEMENT</h2>
                                <p>N° <span t-field="payment.receipt_number"/></p>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Date:</strong> <span t-field="payment.payment_date"/></p>
                                    <p><strong>Référence:</strong> <span t-field="payment.name"/></p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Mode de paiement:</strong> <span t-field="payment.payment_method"/></p>
                                    <p><strong>Référence paiement:</strong> <span t-field="payment.reference"/></p>
                                </div>
                            </div>

                            <div class="mt-4">
                                <h5>Informations Étudiant</h5>
                                <p><strong>Nom:</strong> <span t-field="payment.student_id.name"/></p>
                                <p><strong>Matricule:</strong> <span t-field="payment.student_id.registration_number"/></p>
                                <p><strong>Classe:</strong> <span t-field="payment.student_id.classroom_id.name"/></p>
                            </div>

                            <div class="mt-4">
                                <h5>Détails du Paiement</h5>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr class="table-active">
                                            <th>Type de frais</th>
                                            <th class="text-right">Montant payé</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td><span t-field="payment.student_fee_id.fee_type_id.name"/></td>
                                            <td class="text-right"><span t-field="payment.amount" t-options='{"widget": "monetary", "display_currency": payment.currency_id}'/></td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-active">
                                            <td><strong>TOTAL</strong></td>
                                            <td class="text-right"><strong t-field="payment.amount" t-options='{"widget": "monetary", "display_currency": payment.currency_id}'/></strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <div class="mt-4">
                                <p><strong>Notes:</strong> <span t-field="payment.notes"/></p>
                            </div>

                            <div class="row mt-5">
                                <div class="col-6">
                                    <p>Signature du payeur</p>
                                    <p>____________________</p>
                                </div>
                                <div class="col-6 text-right">
                                    <p>Signature du caissier</p>
                                    <p>____________________</p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
