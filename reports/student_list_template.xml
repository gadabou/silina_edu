<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_report_student_list" model="ir.actions.report">
            <field name="name">Liste des Étudiants</field>
            <field name="model">silina.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">silina_edu.report_student_list_document</field>
            <field name="report_file">silina_edu.report_student_list_document</field>
            <field name="binding_model_id" ref="model_silina_student"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_student_list_document">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">LISTE DES ÉTUDIANTS</h2>
                        <table class="table table-sm table-bordered mt-4">
                            <thead>
                                <tr class="table-active">
                                    <th>Matricule</th>
                                    <th>Nom</th>
                                    <th>Sexe</th>
                                    <th>Classe</th>
                                    <th>Date de naissance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="student">
                                    <tr>
                                        <td><span t-field="student.registration_number"/></td>
                                        <td><span t-field="student.name"/></td>
                                        <td><span t-field="student.gender"/></td>
                                        <td><span t-field="student.classroom_id.name"/></td>
                                        <td><span t-field="student.date_of_birth"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>
