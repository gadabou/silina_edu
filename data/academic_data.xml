<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Niveaux Primaire -->
        <record id="level_cp1" model="silina.level">
            <field name="name">CP1</field>
            <field name="code">CP1</field>
            <field name="degree">primary</field>
            <field name="sequence">1</field>
        </record>

        <record id="level_cp2" model="silina.level">
            <field name="name">CP2</field>
            <field name="code">CP2</field>
            <field name="degree">primary</field>
            <field name="sequence">2</field>
            <field name="next_level_id" ref="level_cp1"/>
        </record>

        <record id="level_ce1" model="silina.level">
            <field name="name">CE1</field>
            <field name="code">CE1</field>
            <field name="degree">primary</field>
            <field name="sequence">3</field>
            <field name="next_level_id" ref="level_cp2"/>
        </record>

        <record id="level_ce2" model="silina.level">
            <field name="name">CE2</field>
            <field name="code">CE2</field>
            <field name="degree">primary</field>
            <field name="sequence">4</field>
            <field name="next_level_id" ref="level_ce1"/>
        </record>

        <record id="level_cm1" model="silina.level">
            <field name="name">CM1</field>
            <field name="code">CM1</field>
            <field name="degree">primary</field>
            <field name="sequence">5</field>
            <field name="next_level_id" ref="level_ce2"/>
        </record>

        <record id="level_cm2" model="silina.level">
            <field name="name">CM2</field>
            <field name="code">CM2</field>
            <field name="degree">primary</field>
            <field name="sequence">6</field>
            <field name="next_level_id" ref="level_cm1"/>
        </record>

        <!-- Niveaux Collège -->
        <record id="level_6eme" model="silina.level">
            <field name="name">6ème</field>
            <field name="code">6EME</field>
            <field name="degree">middle</field>
            <field name="sequence">7</field>
            <field name="next_level_id" ref="level_cm2"/>
        </record>

        <record id="level_5eme" model="silina.level">
            <field name="name">5ème</field>
            <field name="code">5EME</field>
            <field name="degree">middle</field>
            <field name="sequence">8</field>
            <field name="next_level_id" ref="level_6eme"/>
        </record>

        <record id="level_4eme" model="silina.level">
            <field name="name">4ème</field>
            <field name="code">4EME</field>
            <field name="degree">middle</field>
            <field name="sequence">9</field>
            <field name="next_level_id" ref="level_5eme"/>
        </record>

        <record id="level_3eme" model="silina.level">
            <field name="name">3ème</field>
            <field name="code">3EME</field>
            <field name="degree">middle</field>
            <field name="sequence">10</field>
            <field name="next_level_id" ref="level_4eme"/>
        </record>

        <!-- Niveaux Lycée -->
        <record id="level_2nde" model="silina.level">
            <field name="name">2nde</field>
            <field name="code">2NDE</field>
            <field name="degree">high</field>
            <field name="sequence">11</field>
            <field name="next_level_id" ref="level_3eme"/>
        </record>

        <record id="level_1ere" model="silina.level">
            <field name="name">1ère</field>
            <field name="code">1ERE</field>
            <field name="degree">high</field>
            <field name="sequence">12</field>
            <field name="next_level_id" ref="level_2nde"/>
        </record>

        <record id="level_tle" model="silina.level">
            <field name="name">Terminale</field>
            <field name="code">TLE</field>
            <field name="degree">high</field>
            <field name="sequence">13</field>
            <field name="next_level_id" ref="level_1ere"/>
        </record>

        <!-- Matières communes -->
        <record id="subject_math" model="silina.subject">
            <field name="name">Mathématiques</field>
            <field name="code">MATH</field>
            <field name="coefficient">3.0</field>
            <field name="subject_type">theory</field>
            <field name="sequence">1</field>
        </record>

        <record id="subject_french" model="silina.subject">
            <field name="name">Français</field>
            <field name="code">FR</field>
            <field name="coefficient">3.0</field>
            <field name="subject_type">theory</field>
            <field name="sequence">2</field>
        </record>

        <record id="subject_english" model="silina.subject">
            <field name="name">Anglais</field>
            <field name="code">ANG</field>
            <field name="coefficient">2.0</field>
            <field name="subject_type">theory</field>
            <field name="sequence">3</field>
        </record>

        <record id="subject_history" model="silina.subject">
            <field name="name">Histoire-Géographie</field>
            <field name="code">HISTGEO</field>
            <field name="coefficient">2.0</field>
            <field name="subject_type">theory</field>
            <field name="sequence">4</field>
        </record>

        <record id="subject_science" model="silina.subject">
            <field name="name">Sciences</field>
            <field name="code">SCI</field>
            <field name="coefficient">2.0</field>
            <field name="subject_type">both</field>
            <field name="sequence">5</field>
        </record>

        <record id="subject_physics" model="silina.subject">
            <field name="name">Physique-Chimie</field>
            <field name="code">PC</field>
            <field name="coefficient">2.5</field>
            <field name="subject_type">both</field>
            <field name="sequence">6</field>
        </record>

        <record id="subject_svt" model="silina.subject">
            <field name="name">SVT</field>
            <field name="code">SVT</field>
            <field name="coefficient">2.0</field>
            <field name="subject_type">both</field>
            <field name="sequence">7</field>
        </record>

        <record id="subject_sport" model="silina.subject">
            <field name="name">Éducation Physique et Sportive</field>
            <field name="code">EPS</field>
            <field name="coefficient">1.0</field>
            <field name="subject_type">practical</field>
            <field name="sequence">8</field>
        </record>

        <record id="subject_art" model="silina.subject">
            <field name="name">Arts Plastiques</field>
            <field name="code">ART</field>
            <field name="coefficient">1.0</field>
            <field name="subject_type">practical</field>
            <field name="sequence">9</field>
        </record>

        <record id="subject_music" model="silina.subject">
            <field name="name">Musique</field>
            <field name="code">MUS</field>
            <field name="coefficient">1.0</field>
            <field name="subject_type">practical</field>
            <field name="sequence">10</field>
        </record>

        <!-- Types de frais par défaut -->
        <record id="fee_type_tuition" model="silina.fee.type">
            <field name="name">Frais de scolarité annuels</field>
            <field name="code">SCOL</field>
            <field name="fee_category">tuition</field>
            <field name="amount">500000</field>
            <field name="is_mandatory">True</field>
            <field name="allow_installment">True</field>
            <field name="installment_count">3</field>
            <field name="sequence">1</field>
        </record>

        <record id="fee_type_registration" model="silina.fee.type">
            <field name="name">Frais d'inscription</field>
            <field name="code">INSC</field>
            <field name="fee_category">registration</field>
            <field name="amount">50000</field>
            <field name="is_mandatory">True</field>
            <field name="allow_installment">False</field>
            <field name="installment_count">1</field>
            <field name="sequence">2</field>
        </record>

        <record id="fee_type_exam" model="silina.fee.type">
            <field name="name">Frais d'examen</field>
            <field name="code">EXAM</field>
            <field name="fee_category">exam</field>
            <field name="amount">25000</field>
            <field name="is_mandatory">True</field>
            <field name="allow_installment">False</field>
            <field name="installment_count">1</field>
            <field name="sequence">3</field>
        </record>

        <record id="fee_type_canteen" model="silina.fee.type">
            <field name="name">Frais de cantine mensuelle</field>
            <field name="code">CANT</field>
            <field name="fee_category">canteen</field>
