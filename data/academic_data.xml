            <field name="installment_count">1</field>
            <field name="sequence">4</field>
        </record>

        <record id="fee_type_transport" model="silina.fee.type">
            <field name="name">Frais de transport mensuel</field>
            <field name="code">TRANS</field>
            <field name="fee_category">transport</field>
            <field name="amount">20000</field>
            <field name="is_mandatory">False</field>
            <field name="allow_installment">False</field>
            <field name="installment_count">1</field>
            <field name="sequence">5</field>
        </record>

    </data>
</odoo>
