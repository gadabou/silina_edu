<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_generate_student_fees_wizard_form" model="ir.ui.view">
            <field name="name">silina.generate.student.fees.wizard.form</field>
            <field name="model">silina.generate.student.fees.wizard</field>
            <field name="arch" type="xml">
                <form string="Générer Frais en Masse">
                    <sheet>
                        <group>
                            <group>
                                <field name="academic_year_id"/>
                                <field name="generation_type"/>
                                <field name="student_count"/>
                            </group>
                            <group>
                                <field name="due_date"/>
                                <field name="allow_duplicate"/>
                            </group>
                        </group>
                        <group>
                            <field name="level_ids" invisible="generation_type != 'level'" widget="many2many_tags"/>
                            <field name="classroom_ids" invisible="generation_type == 'student'" widget="many2many_tags"/>
                            <field name="student_ids" invisible="generation_type != 'student'" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="fee_type_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Aperçu" name="action_preview" type="object" class="btn-secondary"/>
                        <button string="Générer" name="action_generate" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
