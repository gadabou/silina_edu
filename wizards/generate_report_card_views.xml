<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_generate_report_card_wizard_form" model="ir.ui.view">
            <field name="name">silina.generate.report.card.wizard.form</field>
            <field name="model">silina.generate.report.card.wizard</field>
            <field name="arch" type="xml">
                <form string="Générer Bulletins de Notes">
                    <sheet>
                        <group>
                            <group>
                                <field name="academic_year_id"
                                       options="{'no_create': True, 'no_open': True}"
                                       placeholder="Sélectionner l'année scolaire..."/>
                                <field name="generation_type" widget="radio"/>
                            </group>
                            <group>
                                <field name="template_type" widget="radio"/>
                                <field name="language"/>
                            </group>
                        </group>
                        <group>
                            <field name="classroom_ids"
                                   invisible="generation_type != 'classroom'"
                                   widget="many2many_tags"
                                   options="{'no_create': True}"/>
                            <field name="student_ids"
                                   invisible="generation_type != 'student'"
                                   widget="many2many_tags"
                                   domain="[('state', '=', 'enrolled')]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="include_rank"/>
                            <field name="include_statistics"/>
                            <field name="include_comments"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Aperçu" name="action_generate_preview" type="object" class="btn-secondary"/>
                        <button string="Générer" name="action_generate" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_generate_report_card_wizard" model="ir.actions.act_window">
            <field name="name">Générer Bulletins de Notes</field>
            <field name="res_model">silina.generate.report.card.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
