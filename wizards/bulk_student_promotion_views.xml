<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue tree pour les lignes de promotion -->
        <record id="view_bulk_student_promotion_line_tree" model="ir.ui.view">
            <field name="name">silina.bulk.student.promotion.line.tree</field>
            <field name="model">silina.bulk.student.promotion.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="student_id" readonly="1"/>
                    <field name="current_classroom_id" readonly="1"/>
                    <field name="current_level_id" readonly="1"/>
                    <field name="new_level_id" readonly="1"/>
                    <field name="wizard_id" column_invisible="1"/>
                    <field name="new_classroom_id"
                           required="1"
                           placeholder="Sélectionner la classe..."/>
                    <field name="state" readonly="1"/>
                    <field name="error_message" readonly="1" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour le wizard -->
        <record id="view_bulk_student_promotion_wizard_form" model="ir.ui.view">
            <field name="name">silina.bulk.student.promotion.wizard.form</field>
            <field name="model">silina.bulk.student.promotion.wizard</field>
            <field name="arch" type="xml">
                <form string="Passage en Masse">
                    <sheet>
                        <group invisible="state != 'draft'">
                            <group>
                                <field name="current_academic_year_id"/>
                                <field name="new_academic_year_id"/>
                                <field name="promotion_type"/>
                            </group>
                            <group>
                                <field name="promotion_date"/>
                                <field name="student_count"/>
                            </group>
                        </group>
                        <group invisible="state != 'draft'">
                            <field name="current_classroom_ids" widget="many2many_tags"/>
                            <field name="student_ids" invisible="promotion_type != 'manual'"/>
                        </group>
                        <notebook invisible="state != 'preview'">
                            <page string="Promotions">
                                <field name="line_ids"/>
                            </page>
                        </notebook>
                        <field name="state" invisible="1"/>
                    </sheet>
                    <footer>
                        <button string="Aperçu" name="action_preview" type="object" class="btn-primary" invisible="state != 'draft'"/>
                        <button string="Promouvoir" name="action_promote" type="object" class="btn-primary" invisible="state != 'preview'"/>
                        <button string="Retour" name="action_back_to_draft" type="object" invisible="state != 'preview'"/>
                        <button string="Fermer" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_bulk_student_promotion_wizard" model="ir.actions.act_window">
            <field name="name">Passage en Masse</field>
            <field name="res_model">silina.bulk.student.promotion.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
