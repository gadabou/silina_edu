<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- Vue tree pour installment_ids -->
    <record id="view_silina_fee_installment_tree_for_installment_ids" model="ir.ui.view">
        <field name="name">silina.fee.installment.tree.for.installment_ids</field>
        <field name="model">silina.fee.installment</field>
        <field name="arch" type="xml">
            <list string="Nom" editable="bottom">
                <field name="name"/>
                <field name="amount"/>
                <field name="amount_paid"/>
                <field name="amount_due"/>
                <field name="due_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue tree pour payment_ids -->
    <record id="view_silina_fee_payment_tree_for_payment_ids" model="ir.ui.view">
        <field name="name">silina.fee.payment.tree.for.payment_ids</field>
        <field name="model">silina.fee.payment</field>
        <field name="arch" type="xml">
            <list string="Nom" editable="bottom">
                <field name="name"/>
                <field name="amount"/>
                <field name="payment_date"/>
                <field name="payment_method"/>
                <field name="state"/>
            </list>
        </field>
    </record>



        <!-- Student Fee Views -->
        <record id="view_student_fee_tree" model="ir.ui.view">
            <field name="name">silina.student.fee.tree</field>
            <field name="model">silina.student.fee</field>
            <field name="arch" type="xml">
                <list string="Frais Élèves">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="fee_type_id"/>
                    <field name="academic_year_id"/>
                    <field name="amount"/>
                    <field name="amount_paid"/>
                    <field name="amount_due"/>
                    <field name="due_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="view_student_fee_form" model="ir.ui.view">
            <field name="name">silina.student.fee.form</field>
            <field name="model">silina.student.fee</field>
            <field name="arch" type="xml">
                <form string="Frais Élève">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_view_payments" string="Enregistrer Paiement" type="object"/>
                        <button name="action_create_invoice" string="Créer Facture" type="object" invisible="invoice_id"/>
                        <button name="action_view_invoice" string="Voir Facture" type="object" invisible="not invoice_id"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                                <field name="fee_type_id"/>
                                <field name="academic_year_id"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="amount_paid"/>
                                <field name="amount_due"/>
                                <field name="due_date"/>
                                <field name="installment_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tranches" invisible="installment_count &lt;= 1">
                                <field name="installment_ids" widget="one2many" context="{'tree_view_ref': 'silina_edu.view_silina_fee_installment_tree_for_installment_ids'}"/>
                            </page>
                            <page string="Paiements">
                                <field name="payment_ids" widget="one2many" context="{'tree_view_ref': 'silina_edu.view_silina_fee_payment_tree_for_payment_ids'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_student_fee" model="ir.actions.act_window">
            <field name="name">Frais Élèves</field>
            <field name="res_model">silina.student.fee</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>


        <!-- Action pour créer en mode modal -->
        <record id="action_student_fee_create" model="ir.actions.act_window">
            <field name="name">Nouveaux Frais</field>
            <field name="res_model">silina.student.fee</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
