        <record id="view_student_fee_form" model="ir.ui.view">
            <field name="name">silina.student.fee.form</field>
            <field name="model">silina.student.fee</field>
            <field name="arch" type="xml">
                <form string="Frais Étudiant">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_view_payments" string="Enregistrer Paiement" type="object"/>
