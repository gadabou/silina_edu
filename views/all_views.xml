            <field name="res_model">silina.subject.assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Teacher Views -->
        <record id="view_teacher_tree" model="ir.ui.view">
            <field name="name">silina.teacher.tree</field>
            <field name="model">silina.teacher</field>
            <field name="arch" type="xml">
                <tree string="Enseignants">
                    <field name="teacher_code"/>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
