                </tree>
            </field>
        </record>

        <record id="view_parent_form" model="ir.ui.view">
            <field name="name">silina.parent.form</field>
            <field name="model">silina.parent</field>
            <field name="arch" type="xml">
                <form string="Parent/Tuteur">
                    <sheet>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="relation"/>
                                <field name="gender"/>
                                <field name="occupation"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                            </group>
                        </group>
                        <group>
                            <field name="is_emergency_contact"/>
                            <field name="is_financial_responsible"/>
                            <field name="can_pickup"/>
                        </group>
                        <notebook>
                            <page string="Étudiants">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_parent" model="ir.actions.act_window">
            <field name="name">Parents/Tuteurs</field>
            <field name="res_model">silina.parent</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Student Document Views -->
        <record id="view_student_document_tree" model="ir.ui.view">
            <field name="name">silina.student.document.tree</field>
            <field name="model">silina.student.document</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="document_type"/>
                    <field name="date"/>
                    <field name="is_verified"/>
                </tree>
            </field>
        </record>

        <record id="view_student_document_form" model="ir.ui.view">
            <field name="name">silina.student.document.form</field>
            <field name="model">silina.student.document</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <header>
                        <button name="action_verify" string="Vérifier" type="object" invisible="is_verified"/>
                        <button name="action_unverify" string="Annuler Vérification" type="object" invisible="not is_verified"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                                <field name="document_type"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="expiry_date"/>
                                <field name="is_verified"/>
                            </group>
                        </group>
                        <group>
                            <field name="document" filename="document_filename"/>
                            <field name="document_filename" invisible="1"/>
                        </group>
                        <field name="description"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_student_document" model="ir.actions.act_window">
            <field name="name">Documents Étudiants</field>
            <field name="res_model">silina.student.document</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Exam Views -->
        <record id="view_exam_tree" model="ir.ui.view">
            <field name="name">silina.exam.tree</field>
            <field name="model">silina.exam</field>
            <field name="arch" type="xml">
                <tree string="Examens">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="exam_type"/>
                    <field name="academic_year_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="result_count"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_exam_form" model="ir.ui.view">
            <field name="name">silina.exam.form</field>
            <field name="model">silina.exam</field>
            <field name="arch" type="xml">
                <form string="Examen">
                    <header>
                        <button name="action_schedule" string="Programmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_start" string="Démarrer" type="object" invisible="state != 'scheduled'"/>
                        <button name="action_complete" string="Terminer" type="object" invisible="state != 'in_progress'"/>
                        <button name="action_view_results" string="Voir Résultats" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="exam_type"/>
                                <field name="academic_year_id"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="total_marks"/>
                                <field name="passing_marks"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Classes">
                                <field name="classroom_ids"/>
                            </page>
                            <page string="Matières">
                                <field name="subject_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
