            <field name="res_model">silina.exam</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Exam Result Views -->
        <record id="view_exam_result_tree" model="ir.ui.view">
            <field name="name">silina.exam.result.tree</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <tree string="Résultats" editable="bottom">
                    <field name="exam_id"/>
                    <field name="student_id"/>
                    <field name="subject_id"/>
                    <field name="classroom_id"/>
                    <field name="marks_obtained"/>
                    <field name="total_marks"/>
                    <field name="percentage"/>
                    <field name="grade"/>
                    <field name="is_passed"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_exam_result_form" model="ir.ui.view">
            <field name="name">silina.exam.result.form</field>
            <field name="model">silina.exam.result</field>
            <field name="arch" type="xml">
                <form string="Résultat d'Examen">
                    <header>
                        <button name="action_confirm" string="Confirmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_draft" string="Remettre en brouillon" type="object" invisible="state != 'confirmed'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="exam_id"/>
                                <field name="student_id"/>
                                <field name="subject_id"/>
                                <field name="classroom_id"/>
                            </group>
                            <group>
                                <field name="marks_obtained"/>
                                <field name="total_marks"/>
                                <field name="passing_marks"/>
                                <field name="percentage"/>
                                <field name="grade"/>
                                <field name="is_passed"/>
                            </group>
                        </group>
                        <field name="remarks"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
