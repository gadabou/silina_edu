                        </group>
                        <notebook>
                            <page string="Tranches" invisible="installment_count &lt;= 1">
                                <field name="installment_ids"/>
                            </page>
                            <page string="Paiements">
                                <field name="payment_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
