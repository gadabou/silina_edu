<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Fee Type Views -->
        <!-- Vue tree pour les tranches dans fee_type -->
        <record id="view_fee_type_installment_tree" model="ir.ui.view">
            <field name="name">silina.fee.type.installment.tree</field>
            <field name="model">silina.fee.type.installment</field>
            <field name="arch" type="xml">
                <list string="Tranches" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="due_date_type"/>
                    <field name="due_date" invisible="due_date_type != 'fixed'"/>
                    <field name="due_days" invisible="due_date_type != 'relative'"/>
                    <field name="description" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="view_fee_type_tree" model="ir.ui.view">
            <field name="name">silina.fee.type.tree</field>
            <field name="model">silina.fee.type</field>
            <field name="arch" type="xml">
                <list string="Types de Frais">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="fee_category"/>
                    <field name="total_amount"/>
                    <field name="installment_count"/>
                    <field name="academic_year_id"/>
                    <field name="is_mandatory"/>
                </list>
            </field>
        </record>

        <record id="view_fee_type_form" model="ir.ui.view">
            <field name="name">silina.fee.type.form</field>
            <field name="model">silina.fee.type</field>
            <field name="arch" type="xml">
                <form string="Type de Frais">
                    <header>
                        <button name="action_generate_invoices"
                                string="Générer les Factures"
                                type="object"
                                class="btn-primary"
                                invisible="not installment_ids"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="fee_category"/>
                            </group>
                            <group>
                                <field name="total_amount"/>
                                <field name="academic_year_id"
                                       options="{'no_create': True}"/>
                                <field name="is_mandatory"/>
                                <field name="sequence"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tranches de Paiement" name="installments">
                                <field name="installment_ids"
                                       context="{'tree_view_ref': 'silina_edu.view_fee_type_installment_tree'}">
                                    <list editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="due_date_type"/>
                                        <field name="due_date" invisible="due_date_type != 'fixed'" required="due_date_type == 'fixed'"/>
                                        <field name="due_days" invisible="due_date_type != 'relative'" required="due_date_type == 'relative'"/>
                                    </list>
                                </field>
                                <group>
                                    <field name="installment_count" readonly="1"/>
                                </group>
                            </page>
                            <page string="Applicabilité" name="applicability">
                                <group>
                                    <field name="level_ids" widget="many2many_tags"
                                           options="{'no_create': True}"/>
                                </group>
                            </page>
                            <page string="Facturation" name="invoicing">
                                <group>
                                    <group>
                                        <field name="product_id"
                                               options="{'no_create': True}"/>
                                    </group>
                                    <group>
                                        <field name="account_id"
                                               options="{'no_create': True}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Description" name="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_fee_type" model="ir.actions.act_window">
            <field name="name">Types de Frais</field>
            <field name="res_model">silina.fee.type</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
        </record>


        <!-- Action pour créer en mode modal -->
        <record id="action_fee_type_create" model="ir.actions.act_window">
            <field name="name">Nouveau Type de Frais</field>
            <field name="res_model">silina.fee.type</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
